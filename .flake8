[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    devel,
    install,
    thirdparty,
    vk_sdk
ignore = E203, E266, W503
per-file-ignores =
    __init__.py:F401

[pycodestyle]
max-line-length = 100
ignore = E203, E266, W503

[pydocstyle]
convention = google
add-ignore = D100,D104,D105,D107
